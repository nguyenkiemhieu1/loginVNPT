<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDisplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.SelectPersonActivityNewConvert">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_grey_200"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbarSelectPerson"
                layout="@layout/toolbar_select_person" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNameLabel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"

                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/_10dp"
                    android:text="@string/tv_ho_ten"
                    android:textColor="@color/md_black"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="4"
                    android:background="@drawable/background_search_name_select_person"
                    android:hint="@string/tv_ho_ten"
                    android:paddingLeft="@dimen/_8dp"
                    android:textColor="@color/md_black"
                    android:textColorHint="@color/md_grey_600" />

                <View
                    android:layout_width="@dimen/_5dp"
                    android:layout_height="0dp" />

                <Spinner
                    android:id="@+id/sUnit"
                    style="@style/spinner_style_c"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textColor="@color/md_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSelectDV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border_btn_search"
                    android:text="@string/tv_chon_theonhom"
                    android:textAllCaps="false"
                    android:textColor="@color/md_white" />

                <View
                    android:layout_width="@dimen/_5dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btnSelectCN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border_btn_search"

                    android:textSize="15sp"
                    android:text="@string/tv_chon_theonhom_canhan"
                    android:textAllCaps="false"
                    android:textColor="@color/md_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPositionLabel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/_10dp"
                    android:text="@string/POSITION_ACCOUNT"
                    android:textColor="@color/md_black"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/sPosition"
                    style="@style/spinner_style_c"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textColor="@color/md_black"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3dp"
                android:layout_marginRight="@dimen/_3dp"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtUnitLabel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/_10dp"
                    android:text="@string/UNIT_ACCOUNT"
                    android:textColor="@color/md_black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/_10dp"
                    android:textColor="@color/md_black" />

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border_btn_search"
                    android:text="@string/SEARCH_LABEL_BTN"
                    android:textAllCaps="false"
                    android:textColor="@color/md_white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/_10dp"
                    android:textColor="@color/md_black" />
            </LinearLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/layoutDisplay1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/md_grey_200"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:layout_marginRight="@dimen/_3dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_border_top"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_hoten"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20dp"
                            android:layout_weight="5"
                            android:paddingLeft="@dimen/_5dp"
                            android:text="@string/tv_ho_ten"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_xuly_chinh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_28dp"
                            android:text="@string/tv_XLC"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_dong_xuly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_16dp"
                            android:text="@string/tv_PH"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_xem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_8dp"
                            android:text="@string/tv_Xem"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnThuGonXL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="4"
                            android:gravity="right">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_up"
                                android:text="@string/tv_thugon"
                                android:textColor="@color/md_grey_800"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_20dp"
                            android:layout_weight="2"
                            android:text="@string/tv_giu_3s"
                            android:textColor="@color/colorTextRed"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:background="#fff"
                        android:orientation="vertical"></LinearLayout>

                    <!--List danh sach user -->
                    <TextView
                        android:id="@+id/btnMorongXL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_20dp"
                        android:drawableLeft="@drawable/ic_down"
                        android:text="@string/tv_nhan_chon_nguoinhan"
                        android:textColor="@color/md_grey_800"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_process_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:layout_marginRight="@dimen/_3dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_border_top"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20dp"
                            android:layout_weight="5"
                            android:paddingLeft="@dimen/_5dp"
                            android:text="@string/tv_ho_ten"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20dp"
                            android:text="@string/tv_xuly_chinh"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5dp"
                            android:text="@string/tv_dong_xuly"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_nodata_process_send"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/tv_khong_dulieu"
                        android:textColor="@color/md_black"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_process"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_send_notify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_3dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_border_top_green"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_hoten_donvi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_5dp"
                            android:text="@string/tv_ho_ten_dv"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_xuly_chinh_donvi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="@dimen/_5dp"
                            android:text="@string/tv_xuly_chinh"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/layout_donvi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:background="#fff"
                            android:orientation="vertical"></LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_send_xemdb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_3dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_border_top_green"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_5dp"
                            android:text="@string/tv_ho_ten_dv"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="@dimen/_5dp"
                            android:text="@string/tv_xem_db"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/layout_donvi_xemdb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:background="#fff"
                            android:orientation="vertical"></LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_send_lienthong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_3dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_border_top_green"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_hoten_lt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20dp"
                            android:layout_weight="5"
                            android:paddingLeft="@dimen/_5dp"
                            android:text="@string/tv_DonVi"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_xuly_chinh_lt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_28dp"
                            android:gravity="center"
                            android:text="@string/tv_XLC"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_dong_xuly_lt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_16dp"
                            android:gravity="center"
                            android:text="@string/tv_PH"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_xem_lt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_8dp"
                            android:gravity="center"
                            android:text="@string/tv_Xem"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_donvi_lt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:background="#fff"
                        android:orientation="vertical"></LinearLayout>

                    <TextView
                        android:id="@+id/btnThuGonLT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_20dp"
                        android:drawableLeft="@drawable/ic_up"
                        android:text="@string/tv_thugon"
                        android:textColor="@color/md_grey_800"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnMorongLT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_20dp"
                        android:drawableLeft="@drawable/ic_down"
                        android:text="@string/tv_chon_lienthong"
                        android:textColor="@color/md_grey_800"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_load_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tv_vuilong_doi"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</LinearLayout>