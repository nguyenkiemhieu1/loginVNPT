<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.DetailDocumentWaitingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbarDetail"
                layout="@layout/toolbar_detail_document_waiting" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_grey_200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_4dp"
                        android:background="#fff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_trichyeu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_trichyeu"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_18sp"
                                android:textStyle="bold"
                                tools:text="Ban hanh quy che dam bao an toan thong tin trong hoat dong ung dung cong nghe thong tin" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_cqbh_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_cqbh"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_cqbh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp"
                                tools:text="VNPT Software" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_so_ki_hieu_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_sokyhieu"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_kh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_red_500"
                                android:textSize="@dimen/_16sp"
                                tools:text="123/VNP" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_ngayden_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_ngayden"
                                    android:textColor="@color/colorTextGrey"
                                    android:textSize="@dimen/_16sp" />

                                <TextView
                                    android:id="@+id/tv_ngayden"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_5dp"
                                    android:textColor="@color/md_black"
                                    android:textSize="@dimen/_16sp"
                                    tools:text="12/05/2017" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_ngayvb_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_ngay_vb"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_ngayvb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp"
                                tools:text="19/05/2017" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_hinhthucvb_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_hinhthucvb"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_hinhthucvb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp"
                                tools:text="Công văn" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_5dp"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:textSize="@dimen/_16sp">

                                <TextView
                                    android:id="@+id/tv_sovb_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_sovanban"
                                    android:textColor="@color/colorTextGrey"
                                    android:textSize="@dimen/_16sp" />

                                <TextView
                                    android:id="@+id/tv_sovb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_5dp"
                                    android:textColor="@color/md_black"
                                    android:textSize="@dimen/_16sp"
                                    tools:text="GP CQĐT" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:paddingRight="@dimen/_5dp">

                                <TextView
                                    android:id="@+id/tv_soden_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_soden"
                                    android:textColor="@color/colorTextGrey"
                                    android:textSize="@dimen/_16sp" />

                                <TextView
                                    android:id="@+id/tv_soden"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_5dp"
                                    android:textColor="@color/md_black"
                                    android:textSize="@dimen/_16sp"
                                    tools:text="150" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_do_khan_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_do_khan"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_do_khan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_red_500"
                                android:textSize="@dimen/_16sp"
                                tools:text="Thường mật" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_hanxuly_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_hanxuly"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_hanxuly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp"
                                tools:text="21/05/2017" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_5dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_sotrang_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_sotrang"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_sotrang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp"
                                tools:text="01" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_5dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_hinhthucgui_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_hinhthucgui"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/tv_hinhthucgui"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5dp"
                                android:textColor="@color/md_black"
                                android:textSize="@dimen/_16sp"
                                tools:text="Hệ thống QLVB" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutFileDK"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_16dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_filedinhkem_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_file_dinh_kem"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/layout_file_attach"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:orientation="vertical"
                            android:padding="@dimen/_8dp"></androidx.recyclerview.widget.RecyclerView>

                        <LinearLayout
                            android:id="@+id/layoutAction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_4dp"
                            android:layout_marginTop="@dimen/_4dp"
                            android:layout_marginEnd="@dimen/_4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnMove"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_4dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_4dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_btn_search"
                                android:text="@string/tv_chuyen"
                                android:textAllCaps="false"
                                android:visibility="gone"
                                android:textColor="@color/md_white"
                                android:textSize="@dimen/_12sp" />

                            <Button
                                android:id="@+id/btnChuyenXuLy"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35dp"
                                android:layout_marginStart="@dimen/_4dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_4dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_btn_search"
                                android:text="@string/tv_chuyen_xuly"
                                android:textAllCaps="false"
                                android:textColor="@color/md_white"
                                android:textSize="@dimen/_12sp" />


                            <Button
                                android:id="@+id/btn_send_comment"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35dp"
                                android:layout_marginStart="@dimen/_4dp"
                                android:layout_marginEnd="@dimen/_4dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_btn_search"

                                android:text="@string/tv_gui_ykien"
                                android:textAllCaps="false"
                                android:textColor="@color/md_white"
                                android:textSize="@dimen/_12sp" />
                            <Button
                                android:id="@+id/btnMark"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35dp"
                                android:layout_marginStart="@dimen/_4dp"
                                android:layout_marginEnd="@dimen/_4dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:background="@drawable/border_btn_refresh"

                                android:text="@string/tv_bo_danhdau"
                                android:textAllCaps="false"
                                android:textColor="@color/md_white"
                                android:textSize="@dimen/_12sp" />


                            <Button
                                android:id="@+id/btnFinish"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35dp"
                                android:layout_marginStart="@dimen/_4dp"
                                android:layout_marginEnd="@dimen/_4dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_btn_red"

                                android:text="@string/tv_ketthuc"
                                android:textAllCaps="false"
                                android:textColor="@color/md_white"
                                android:textSize="@dimen/_12sp" />

                            <Button
                                android:id="@+id/btnHistory"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_btn_grey"

                                android:text="@string/tv_lichsu"
                                android:textAllCaps="false"
                                android:textColor="@color/md_white"
                                android:visibility="gone" />
                            <Button
                                android:id="@+id/btnSave"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_btn_cancel"

                                android:text="@string/tv_luu_hoso"
                                android:textSize="@dimen/_12sp"
                                android:textAllCaps="false"
                                android:textColor="@color/md_white" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginEnd="@dimen/_8dp"
                            android:background="@color/md_grey_200" />

                        <LinearLayout
                            android:id="@+id/layoutVanBan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_5dp"
                            android:paddingBottom="@dimen/_5dp">

                            <TextView
                                android:id="@+id/tv_vblienquan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:paddingTop="@dimen/_8dp"
                                android:text="@string/tv_vb_lienquan"
                                android:textColor="@color/colorTextGrey"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/layout_related_docs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_8dp"></LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8dp"
                            android:layout_marginBottom="@dimen/_8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layout_file_related"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"></LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_comment_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8dp"
                        android:layout_marginTop="@dimen/_8dp"
                        android:layout_marginEnd="@dimen/_8dp"
                        android:text="@string/tv_tonghop_y_kien"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="@dimen/_4dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</LinearLayout>
